<!DOCTYPE html>
<html>
  <head>
    <title>Unicleaner</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to 'Unicleaner', root_path, class: 'navbar-brand' %>
      <div class="collapse navbar-collapse">
        <% if current_user %>
          <%= link_to 'ログアウト', logout_path, method: :delete, class: 'nav-item nav-link' %>
          <%= link_to '編集', edit_user_path(current_user), class: 'nav-item nav-link' %>
          <%= link_to 'ホーム', user_path(current_user), class: 'nav-item nav-link' %>
          <%= link_to '作業日設定', schedule_path, class: 'nav-item nav-link' %>
        <% else %>
          <%= link_to '新規登録', new_user_path, class: 'nav-item nav-link' %>
        <% end %>
        <% if current_user&.admin? %>
          <%= link_to '管理画面', users_path, class: 'nav-item nav-link' %>
        <% end %>
      </div>
    </nav>
      <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
