<h1>詳細</h1>
<h2><%= @user.name %></h2>
<table>
  <thead>
    <tr>
      <th>日</th><th>月</th><th>火</th><th>水</th><th>木</th><th>金</th><th>土</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% dates(@user).each do |date| %>
        <% if date == @user.schedules.first&.scheduled_date %>
          <td class="bg-info"><%= date.day %></td>
        <% else %>
          <td><%= date.day %></td>
        <% end %>
      <% end %>
    </tr>
  </tbody>
</table>

<% schedules = @user.schedules %>
<ul>
  <% schedules.each do |schedule| %>
  <li>
    <%= schedule.scheduled_date %>
    <%= link_to '削除', schedule_path(schedule), method: :delete %>
    <%= link_to '編集', edit_schedule_path(schedule) %>
  </li>
  <% end %>
</ul>
