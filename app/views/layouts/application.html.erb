<!DOCTYPE html>
<html>
  <head>
    <title>unicleaner</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to 'Unicleaner', root_path, class: 'navbar-brand' %>
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to 'カレンダー', root_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to '一覧', users_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to '新規登録', new_user_path, class: 'nav-link' %>
        </li>
      </ul>
    </nav>
    <div class="container">
    <%= yield %>
    </div>
  </body>
</html>
