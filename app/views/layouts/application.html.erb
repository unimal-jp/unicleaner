<!DOCTYPE html>
<html>
  <head>
    <title>Unicleaner</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <ul class="nav">
        <li class="nav-item">
          <%= link_to 'ホーム', root_path, class: 'nav-link' %>
        </li>
        <% if current_user %>
        <li class="nav-item">
          <%= link_to 'ログアウト', logout_path, method: :delete, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to '編集', edit_user_path(current_user), class: 'nav-link' %>
        </li>
        <% else %>
        <li class="nav-item">
          <%= link_to 'ログイン', login_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to '新規登録', new_user_path, class: 'nav-link' %>
        </li>
        <% end %>
      </ul>
      <%= yield %>
    </div>
  </body>
</html>
