<h1>ログイン</h1>
<%= form_with scope: :session do |f| %>
  <div class="form-group">
      <%= f.label :name, '名前' %>
      <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
      <%= f.label :password, 'パスワード' %>
      <%= f.password_field :password, class: 'form-control' %>
  </div>
    <%= f.submit 'ログインする', class: 'btn btn-primary' %>
<% end %>
